<div class = "container top-margin">
  <div class = "row">
    <div class = "span4">

    </div>
    <div class = "span5 form-decor">
      <%= form_tag '/upload', multipart: true , class: "form-horizontal" do%>
        
        <div class = "control-group">
          <label class = "control-label">Select file to upload</label> 
          <div class = "controls">
            <%= file_field_tag "file" %>
          </div>	
        </div>

        <div class = "control-group">
          <div class = "controls">
            <%= submit_tag("Upload", class: "btn btn-primary") %>
          </div>
        </div>	
      <% end %>
    </div>	
  </div>	
</div>